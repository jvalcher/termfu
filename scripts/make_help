#!/usr/bin/python3

from colors import *

T = BOLD_CYAN
M = BOLD_GREEN
S = BOLD_YELLOW
R = RESET

make_commands = f'''

{M}make           {R}- Build production binary {S}./termfu{R}

{M}make install   {R}- Copy production binary to {S}/usr/local/bin{R}
               {R}- Run with {S}sudo{R}

{M}make install    {R}- Copy production binary to {S}/usr/local/bin{R}
                {R}- Run with {S}sudo{R}

{M}make dev        {R}- Build development binary

{M}make devf       {R}- Build development binary (formatted errors)

{M}make plugins    {R}- Print plugin indexes and codes

{M}make todo       {R}- Print source code tags, e.g. TODO, FIXME

{M}make build      {R}- Build sample binaries for {S}run_dev{R} below

{M}make run_dev    {R}- Run termfu_dev with sample binary or script
                {R}- Adjust {S}configs/.termfu_run_dev{R} as needed

{M}make debug      {R}- Start {S}termfu{R} to debug {S}termfu_dev{R}
                {R}- See {T}Debugging termfu_dev with termfu{R} section in {S}README.md{R}

{M}make debug_gdb  {R}- Debug {S}termfu_dev{R} with gdb tui

'''

print (make_commands)

